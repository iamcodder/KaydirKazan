<?xml version="1.0" encoding="utf-8"?>


<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/animated_list"
        tools:context=".Activity.UygulamaHakkinda" android:id="@+id/scroolview">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView android:layout_width="0dp" android:layout_height="0dp"
                                               app:lottie_autoPlay="true" app:lottie_loop="true"
                                               app:lottie_rawRes="@raw/about"

                                               android:id="@+id/lottieAnimationView3"
                                               app:layout_constraintBottom_toTopOf="@+id/guide_ustten_otuzbes"
                                               app:layout_constraintTop_toTopOf="@+id/guide_ustten_bes"
                                               app:layout_constraintStart_toStartOf="@+id/guide_soldan_bes"
                                               app:layout_constraintEnd_toStartOf="@+id/guide_sagdan_bes"/>
        <TextView
                android:text="@string/mucize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:fontFamily="@font/margarine"
                android:textStyle="italic" android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/guide_sagdan_bes"
                app:layout_constraintStart_toStartOf="@+id/guide_soldan_bes"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toTopOf="@+id/textView8"
                app:layout_constraintVertical_chainStyle="packed" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guide_ustten_otuzbes"/>
        <TextView
                android:text="@string/patronus_studio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:fontFamily="@font/margarine"
                android:textAllCaps="false" android:textStyle="italic" android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/guide_sagdan_bes"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
        />
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guide_ustten_otuzbes"
                                                    android:orientation="horizontal"
                                                    app:layout_constraintGuide_percent="0.50"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guide_ustten_bes"
                                                    android:orientation="horizontal"
                                                    app:layout_constraintGuide_percent="0.05"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guide_soldan_bes"
                                                    android:orientation="vertical"
                                                    app:layout_constraintGuide_percent="0.05109489"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guide_sagdan_bes"
                                                    android:orientation="vertical"
                                                    app:layout_constraintGuide_percent="0.95"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline17"
                                                    android:orientation="horizontal"
                                                    app:layout_constraintGuide_percent="0.75"/>
        <TextView
                android:text="Teşekkürler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/guide_soldan_bes" android:fontFamily="@font/bungee_shade"
                app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginTop="32dp"/>
        <TextView
                android:text="@string/katkilar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/guide_soldan_bes" android:fontFamily="@font/margarine"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

