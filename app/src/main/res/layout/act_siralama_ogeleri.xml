<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/act_siralama_ogeleri_resim"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/cardview_dark_background"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/act_siralama_ogeleri_isim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/act_siralama_ogeleri_puan"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/act_siralama_ogeleri_resim"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/act_siralama_ogeleri_resim"
            app:layout_constraintBottom_toBottomOf="@+id/act_siralama_ogeleri_resim"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/act_siralama_ogeleri_puan"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/act_siralama_ogeleri_resim"
            app:layout_constraintBottom_toBottomOf="@+id/act_siralama_ogeleri_resim"/>

</androidx.constraintlayout.widget.ConstraintLayout>